{
  "name": "olden",
  "version": "0.1.3",
  "main": "./app/main.js",
  "scripts": {
    "start": "npm run build && ./node_modules/.bin/electron app --dev",
    "test": "./node_modules/.bin/mocha --reporter spec",
    "build": "./node_modules/.bin/bower install && node scripts/build.js && npm i --only=prod --prefix ./app --no-optional",
    "package_macos": "node scripts/package_macos.js",
    "package_win": "node scripts/package_windows.js",
    "package_linux": "node scripts/package_linux.js",
    "package": "npm run package_macos && npm run package_win && npm run package_linux",
    "bootstrap": "npm i"
  },
  "dependencies": {
    "dexie": "^1.4.1"
  },
  "optionalDependencies": {
    "appdmg": "^0.4.5"
  },
  "devDependencies": {
    "archiver": "^1.1.0",
    "bower": "^1.7.9",
    "electron": "^1.3.5",
    "electron-packager": "^8.0.0",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "robotjs": "^0.4.4",
    "spectron": "^3.3.0"
  }
}
